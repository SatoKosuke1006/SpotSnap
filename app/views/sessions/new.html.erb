<% content_for :hide_header_footer, true %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      <%= link_to "パスワードをお忘れですか？", new_password_reset_path %>

      <%# 仮置き %>
      <div style="margin-bottom: 10px;"></div>

      <%# 仮置き %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保存</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>アカウントをお持ちでないですか? <%= link_to "登録する", signup_path %></p>
  </div>
</div>
