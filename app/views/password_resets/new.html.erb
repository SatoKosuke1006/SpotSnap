<% # パスワード変更画面 %>
<% content_for :hide_header, true %>
<h1>パスワード確認</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
    
      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
