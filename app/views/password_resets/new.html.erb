<% # パスワード変更画面 %>
<% content_for :hide_header, true %>

  <div class="login-container">
    <div class="logo">spot snap</div>

    <div style="margin-bottom: 30px;"></div>

    <div>パスワードをお忘れの方</div>
    <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
    
      <%= f.email_field :email, class: 'login-form', placeholder: "メールアドレス" %>

      <div style="margin-bottom: 50px;"></div>

      <%= f.submit "再設定メールを送信", class: "grey-btn" %>
    <% end %>
  </div>

