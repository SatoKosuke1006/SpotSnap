<% # ヘッダー　パーシャル %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "spot snap", home_path, id: "logo" %>
    <nav>
      
      <% # ハンバーガーメニューのボタン設定 %>
      <div class="navbar-header"> 
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <% # ハンバーガーメニューのボタン内容 %>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
          <li><%= link_to image_tag("post.png", size: 30), new_post_path, data: {"turbo" => false} %></li>
          <li><%= link_to image_tag("map.png", size: 30), maps_path, data: {"turbo" => false} %></li>
          <li><%= link_to image_tag("search.png", size: 30), users_path %></li>

