<% #投稿 パーシャル %>
<li id="micropost-<%= micropost.id %>">
  
  <div class="user-timestamp-like">
    <div class="user-timestamp">
      <% #アカウント名 %>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      
      <% #投稿日時 %>
      <span class="timestamp">
        <%= time_ago_in_words(micropost.created_at) %>  
        <% if current_user?(micropost.user) %>
          <%= link_to "削除する", micropost, data: { "turbo-method": :delete, "turbo-confirm": "削除してもよろしいですか?" } %>
        <% end %>
      </span>
    </div>

    <% #いいねボタン %>
    <turbo-frame id="like_buttons_<%= micropost.id %>">
      <%= render partial: "likes/like", locals: { micropost: micropost } %>
    </turbo-frame>
  </div>

  <% #投稿内容 %>
  <span class="content">
    <%= micropost.content %>
    <% if micropost.image.attached? %>
      <%= link_to (image_tag micropost.image), maps_path(micropost_id: micropost.id), data: {"turbo" => false} %>
    <% end %>
  </span>

</li>
