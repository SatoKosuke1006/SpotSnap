<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50, class: "rounded-circle"), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <% if micropost.image.attached? %>
      <%= image_tag micropost.image.variant(:display) %>
      <%= micropost.content %>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "削除する", micropost, data: { "turbo-method": :delete,
                                               turbo_confirm: "You sure?" } %>
    <% end %>
  </span>

  <turbo-frame id="like_buttons_<%= micropost.id %>">
    <%= render partial: "likes/like", locals: { micropost: micropost } %>
  </turbo-frame>
</li>
