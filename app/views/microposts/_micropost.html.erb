<% #投稿 パーシャル %>
<li id="micropost-<%= micropost.id %>">
  
  <% #アカウント画像 %>
  <%= link_to gravatar_for(micropost.user, size: 50, class: "rounded-circle"), micropost.user %>
  
  <% #アカウント名 %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  
  <% #投稿内容 %>
  <span class="content">
    <%= link_to (image_tag micropost.image), maps_path(micropost_id: micropost.id), data: {"turbo" => false} %>
    <%= micropost.content %>
  </span>
  
  <% #投稿日時 %>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>  
    <% if current_user?(micropost.user) %>
      <%= link_to "削除する", micropost, data: { "turbo-method": :delete, "turbo-confirm": "削除してもよろしいですか?" } %>
    <% end %>
  </span>

  <% #いいねボタン %>
  <turbo-frame id="like_buttons_<%= micropost.id %>">
    <%= render partial: "likes/like", locals: { micropost: micropost } %>
  </turbo-frame>

</li>
