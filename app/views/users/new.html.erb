<% #アカウント登録画面 %>

<% content_for :hide_header, true %>
<h1>登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_field :name, class: 'form-control', placeholder: "ユーザーネーム" %>

      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>

      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード再入力" %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
